{
  "name": "@signed/scribe",
  "version": "0.4.0",
  "description": "Live reload your reveal.js presentation when editing your asciidoc slides",
  "repository": "https://github.com/signed/scribe.git",
  "license": "MIT",
  "keywords": [
    "slides",
    "live reload",
    "reveal.js",
    "asciidoc",
    "asciidoctor"
  ],
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "yarn run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@asciidoctor/core": "2.2.6",
    "@asciidoctor/reveal.js": "4.1.0",
    "browser-sync": "2.29.3",
    "chokidar": "3.5.3",
    "fs-extra": "11.1.1"
  },
  "devDependencies": {
    "@types/browser-sync": "2.27.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.9.0",
    "typescript": "5.2.2"
  }
}
