{
  "name": "@signed/scribe",
  "version": "0.4.0",
  "description": "Live reload your reveal.js presentation when editing your asciidoc slides",
  "repository": "https://github.com/signed/scribe.git",
  "license": "MIT",
  "keywords": [
    "slides",
    "live reload",
    "reveal.js",
    "asciidoc",
    "asciidoctor"
  ],
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "yarn run build",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "present": "tsx src/cli.ts --base-dir example",
    "format": "prettier --write .",
    "nitpick": "yarn test && yarn typecheck"
  },
  "dependencies": {
    "@asciidoctor/core": "2.2.6",
    "@asciidoctor/reveal.js": "4.1.0",
    "browser-sync": "2.29.3",
    "chokidar": "3.5.3",
    "fs-extra": "11.1.1"
  },
  "devDependencies": {
    "@signed/prettier-config": "0.1.0",
    "@types/browser-sync": "2.27.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.9.0",
    "prettier": "3.1.0",
    "tsx": "4.1.2",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "prettier": "@signed/prettier-config"
}
